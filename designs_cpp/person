#ifndef COMMON_H
#define COMMON_H
typedef struct bill
{
    int office_vist_fee, drug_fee;
    string patient_name, doctor_name;
    struct bill *next=NULL;
    /* data */
} bill; /*bill_save*/
class Person
{
private:
    int age;
    double height, weight;
    std::string gender, number, name;
    Person *next=NULL;
    /* data */
protected:
    void Input
    {
        cout << "Please enter your name" << endl;
        cin >> name;
        cout << "Please enter your gender" << endl;
        cin >> gender;
        cout << "Please enter your age" << endl;
        cin >> age;
        cout << "Please enter your height and weight" << endl;
        cin >> height >> weight;
        cout << "Please enter your nubmer" << endl;
        cin >> number;
    }
    int output_age()
    {
        return age;
    }
    double output_weight()
    {
        return weight;
    }
    string output_gender()
    {
        return gender;
    }
    string output_number()
    {
        return number;
    }
    string output_name()
    {
        return name;
    }
    double output_height()
    {
        return height;
    }

public:
    Person(/* args */);
    ~Person();
};

Person::Person(/* args */)
{
}

Person::~Person()
{
}

class Doctor : public Person
{
private:
    string specialty; /*内科医生（surgeon）、儿科医生（pediatrician） 、产科医生（obstetrician）及全科医生（general practitioner）*/
public:
    void input_dr();
    void output_specialty();
} class Patient : public Person
{
private:
    string my_doctor;

public:
    void input_pa();
    void output_my_doctor();
}
#endif // COMMON_H